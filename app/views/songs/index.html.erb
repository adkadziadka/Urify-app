<h1>All songs repository:</h1>

<div class="songs-container">
  <% @songs.each do |song| %>
   
	<ul class="songs">
		
		<h3><%= link_to song.title, song_path(id: song.id, artist_id: song.artist.id) %>, by <%= song.artist.name %></h3>
			
  </ul>
   <% end %>
</div>

<footer>
	<%= link_to "All Artists", artists_path %>
  <%= link_to "Add new song", new_song_path %>
</footer>


